<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".BluetoothActivityAdapter" android:id="@+id/layoutCell">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/nameBLE"
            app:layout_constraintStart_toEndOf="@+id/rssiBLE"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="36dp" app:layout_constraintHorizontal_bias="0.338"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:id="@+id/adresseBLE"
            app:layout_constraintStart_toStartOf="@+id/nameBLE"
            app:layout_constraintEnd_toEndOf="@+id/nameBLE"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/nameBLE"
            app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:id="@+id/imageRSSI"
            android:layout_width="161dp"
            android:layout_height="76dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@android:drawable/checkbox_off_background"
            android:tint="@color/design_default_color_secondary"/>

    <TextView
            android:id="@+id/rssiBLE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:text="TextView"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.715"/>
</androidx.constraintlayout.widget.ConstraintLayout>