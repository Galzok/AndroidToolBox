<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">

    <TextView
            android:text="Bonjour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:textColor="#D3D3D3"
            android:textSize="24sp"
            android:layout_marginTop="92dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.511"/>
    <ImageView
            android:layout_width="235dp"
            android:layout_height="61dp" app:srcCompat="@drawable/logo_isen"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
            android:layout_width="126dp"
            android:layout_height="125dp" app:srcCompat="@drawable/web_service"
            android:id="@+id/webButton"
            app:layout_constraintEnd_toEndOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="@+id/textView7" app:layout_constraintHorizontal_bias="0.909"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="@+id/textView7"/>
    <TextView
            android:text="Web Services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/webButton" app:layout_constraintEnd_toEndOf="@+id/webButton"
            app:layout_constraintStart_toStartOf="@+id/webButton" android:layout_marginTop="16dp"/>
    <ImageButton
            android:layout_width="147dp"
            android:layout_height="138dp" app:srcCompat="@drawable/cycle_de_vie"
            android:id="@+id/cycleButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintBottom_toTopOf="@+id/textView6" android:layout_marginBottom="28dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <TextView
            android:text="Cycle de vie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/cycleButton"
            app:layout_constraintStart_toStartOf="@+id/cycleButton" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/cycleButton"/>
    <TextView
            android:text="Sauvegarde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" android:textSize="18sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/sauvegardeButton" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Permissions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/permissionButton" app:layout_constraintHorizontal_bias="0.136"
            app:layout_constraintEnd_toEndOf="@+id/permissionButton"
            app:layout_constraintBottom_toTopOf="@+id/decoButton" android:layout_marginBottom="32dp"/>
    <ImageButton
            android:layout_width="120dp"
            android:layout_height="125dp" app:srcCompat="@drawable/permission"
            android:id="@+id/permissionButton"
            app:layout_constraintBottom_toTopOf="@+id/textView8"
            android:layout_marginBottom="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="@+id/textView6"/>
    <ImageButton
            android:layout_width="129dp"
            android:layout_height="139dp" app:srcCompat="@drawable/sauvegarde"
            android:id="@+id/sauvegardeButton"
            app:layout_constraintBottom_toTopOf="@+id/textView7" android:layout_marginBottom="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <Button
            android:text="deconnexion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/decoButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>