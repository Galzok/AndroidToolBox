<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".BLEDeviceActivity">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textNom" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="76dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="64dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:id="@+id/textUUID"
            app:layout_constraintTop_toBottomOf="@+id/textNom" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintStart_toStartOf="@+id/textNom"
            android:layout_marginTop="8dp"/>
    <ImageView
            android:layout_width="31dp"
            android:layout_height="35dp" app:srcCompat="@android:drawable/arrow_down_float"
            android:id="@+id/imageFleche"
            app:layout_constraintStart_toEndOf="@+id/textUUID" android:layout_marginStart="76dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>