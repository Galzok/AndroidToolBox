<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">

    <TextView
            android:text="Bonjour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:textColor="#D3D3D3"
            android:textSize="24sp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.482"/>
    <ImageView
            android:layout_width="235dp"
            android:layout_height="61dp" app:srcCompat="@drawable/logo_isen"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.443"/>
    <ImageButton
            android:layout_width="143dp"
            android:layout_height="110dp" app:srcCompat="@drawable/web_service"
            android:id="@+id/webButton"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginTop="52dp" app:layout_constraintStart_toEndOf="@+id/permissionButton"
            android:layout_marginStart="60dp"/>
    <TextView
            android:text="Web Services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/webButton"
            app:layout_constraintEnd_toEndOf="@+id/webButton" app:layout_constraintTop_toBottomOf="@+id/webButton"
            android:layout_marginTop="16dp"/>
    <ImageButton
            android:layout_width="144dp"
            android:layout_height="126dp" app:srcCompat="@drawable/cycle_de_vie"
            android:id="@+id/cycleButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <TextView
            android:text="Cycle de vie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/cycleButton"
            app:layout_constraintStart_toStartOf="@+id/cycleButton" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/cycleButton" app:layout_constraintHorizontal_bias="0.634"/>
    <TextView
            android:text="Sauvegarde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" android:textSize="18sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/sauvegardeButton"
            app:layout_constraintStart_toStartOf="@+id/sauvegardeButton"
            app:layout_constraintEnd_toEndOf="@+id/sauvegardeButton"/>
    <TextView
            android:text="Permissions"
            android:layout_width="109dp"
            android:layout_height="23dp"
            android:id="@+id/textView8" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/permissionButton" app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintEnd_toEndOf="@+id/permissionButton"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/permissionButton"/>
    <ImageButton
            android:layout_width="135dp"
            android:layout_height="108dp" app:srcCompat="@drawable/permission"
            android:id="@+id/permissionButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" android:layout_marginTop="52dp"/>
    <ImageButton
            android:layout_width="130dp"
            android:layout_height="123dp" app:srcCompat="@drawable/sauvegarde"
            android:id="@+id/sauvegardeButton"
            app:layout_constraintStart_toEndOf="@+id/cycleButton"
            android:layout_marginStart="56dp" android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <Button
            android:text="deconnexion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/decoButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.441" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintVertical_bias="1.0"/>
    <ImageButton
            android:layout_width="58dp"
            android:layout_height="61dp" app:srcCompat="@android:drawable/stat_sys_data_bluetooth"
            android:id="@+id/bleButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.477"
            android:layout_marginBottom="44dp" app:layout_constraintBottom_toTopOf="@+id/decoButton"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="Bluethooth"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:id="@+id/textBle"
            app:layout_constraintStart_toStartOf="@+id/bleButton"
            app:layout_constraintEnd_toEndOf="@+id/bleButton" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/bleButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>