<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FormulaireActivity">

    <TextView
            android:text="Formulaire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Formulaire"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp" android:textSize="24sp"
            android:layout_marginStart="120dp" app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/first_name"
            android:layout_marginStart="64dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="252dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="prenom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prenom"
            app:layout_constraintBottom_toTopOf="@+id/first_name" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="72dp" android:layout_marginBottom="8dp"/>
    <TextView
            android:text="Nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nom" app:layout_constraintBottom_toTopOf="@+id/name"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="72dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/name" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/first_name" android:layout_marginStart="72dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="date de naissance "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dateTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp" app:layout_constraintTop_toBottomOf="@+id/name"
            android:layout_marginTop="32dp"/>
    <Button
            android:text="Sauvegarde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/save_button" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/read_button" app:layout_constraintEnd_toEndOf="@+id/read_button"
            app:layout_constraintStart_toStartOf="@+id/read_button"/>
    <Button
            android:text="lecture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/read_button" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>