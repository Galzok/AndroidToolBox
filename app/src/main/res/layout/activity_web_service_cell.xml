<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/linearLayout">
    <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageWebService" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="@+id/textName"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.104" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:layout_width="156dp"
            android:layout_height="24dp"
            android:id="@+id/textName" app:layout_constraintStart_toEndOf="@+id/imageWebService"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintHorizontal_bias="0.347"/>
    <TextView
            android:layout_width="161dp"
            android:layout_height="21dp"
            android:id="@+id/textAdresse"
            app:layout_constraintTop_toBottomOf="@+id/textName" android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/imageWebService" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.285"/>
    <TextView
            android:layout_width="164dp"
            android:layout_height="20dp"
            android:id="@+id/textMail"
            app:layout_constraintTop_toBottomOf="@+id/textName" android:layout_marginTop="52dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageWebService" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.298"/>
</androidx.constraintlayout.widget.ConstraintLayout>